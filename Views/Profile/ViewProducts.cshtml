@model IEnumerable<ProDuct>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Products Available</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
            margin: 12px 0;
        }
        th, td {
            padding: 8px;
            border: 1px solid #ddd;
            vertical-align: top;
            text-align: left;
        }
        .images {
            display: flex;
            gap: 6px;
            align-items: center;
            flex-wrap: nowrap;
        }
        .images img {
            flex: 0 0 auto;       
            width: 100px;         
            height: 100px;        
            object-fit: contain;  
            background: #f8f8f8;
            border-radius: 4px;
            display: block;
        }
    </style>
</head>
<body>
    <h1>Products Available</h1>
    <table>
        <tr>
            <th>Product Name</th>
            <th>Rate</th>
            <th>Stock</th>
            <th>Images</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Productname</td>
                <td>@item.Rate</td>
                <td>@item.Stock</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Images))
                    {
                        var images = item.Images.Split(',');
                        <div class="images">
                        @foreach (var img in images)
                        {
                            <img src="~/Products/@item.Productname/@img" alt="Product Image" />
                        }
                        </div>
                    }
                </td>
            </tr>
        }
    </table>
</body>
</html>
